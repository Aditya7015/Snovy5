{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "isolatedModules": false,
    "verbatimModuleSyntax": false,
    "resolveJsonModule": true,
    "rootDir": "./src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}

 